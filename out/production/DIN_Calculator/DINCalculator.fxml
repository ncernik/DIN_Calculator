<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CalculatorController" styleClass="vbox">
   <children>
      <Label stylesheets="@style.css" text="Ski DIN Calculator" styleClass="header"/>
      <VBox styleClass="container">
         <Label stylesheets="@style.css" text="Height" styleClass="subheading"/>
         <ChoiceBox fx:id="heightBox" prefWidth="150.0" stylesheets="@style.css" styleClass="choiceBox"/>
      </VBox>
      <VBox styleClass="container">
         <Label stylesheets="@style.css" text="Weight" styleClass="subheading"/>
         <ChoiceBox fx:id="weightBox" prefWidth="150.0" stylesheets="@style.css" />
      </VBox>
      <VBox styleClass="container">
       <Label stylesheets="@style.css" text="Boot Length" styleClass="subheading"/>
        <ChoiceBox fx:id="lengthBox" layoutX="10.0" layoutY="72.0" prefWidth="150.0" stylesheets="@style.css" styleClass="lengthBox"/>
      </VBox>
      <VBox styleClass="container">
       <Label stylesheets="@style.css" text="Age" styleClass="subheading"/>
       <ChoiceBox fx:id="ageBox" layoutX="10.0" layoutY="117.0" prefWidth="150.0" stylesheets="@style.css" />
      </VBox>
      <VBox styleClass="container">
      <Label stylesheets="@style.css" text="Skier Type" styleClass="subheading"/>
      <ChoiceBox fx:id="typeBox" layoutX="10.0" layoutY="162.0" prefWidth="150.0" stylesheets="@style.css" />
      </VBox>
      <Button fx:id="calcButton" defaultButton="true" mnemonicParsing="false" stylesheets="@style.css" text="Calculate" onAction="#displayDIN">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</VBox>
